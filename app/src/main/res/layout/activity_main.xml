<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:textSize="@dimen/symbol_size"
            android:text="@string/oil_wells_symbol"
            />
        <Spinner
            android:id="@+id/oilWellChoices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/oil_wells"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:textSize="@dimen/symbol_size"
            android:text="@string/chart_symbol"
            />
        <Spinner
            android:id="@+id/chartChoices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/charts"
            />
    </TableRow>
    <TableRow>
        <com.example.oandr.LinePaint
            android:id="@+id/chart"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/chart_margin_left"
            android:layout_marginRight="@dimen/chart_margin_right"
            android:layout_marginBottom="@dimen/chart_margin_bottom"
            android:layout_marginTop="@dimen/chart_margin_top"/>
    </TableRow>

</TableLayout>