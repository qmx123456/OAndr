<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oandr">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OAndr">
        <activity android:name=".ui.activity.other.BasicUseActivity"
            android:theme="@style/NoAction"/>
        <activity android:name=".ui.activity.chart.LineChartActivity"
            android:label="@string/LineChartsBarName"/>
        <activity android:name=".ui.activity.chart.ColumnChartActivity"
            android:label="@string/ColumnChartBarName"/>
        <activity android:name=".ui.activity.chart.PieChartActivity"
            android:label="@string/PieChartBarName"/>
        <activity android:name=".ui.activity.chart.BubbleChartActivity"
            android:label="@string/BubbleChartBarName"/>
        <activity android:name=".ui.activity.other.UsageActivity"
            android:theme="@style/NoAction"/>
        <activity android:name=".ui.activity.usage.ExchangeActivity"
            android:label="@string/exchange"/>
        <activity android:name=".ui.activity.other.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
</manifest>